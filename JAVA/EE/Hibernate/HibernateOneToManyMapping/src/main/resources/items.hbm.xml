<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
"http://hibernate.org/dtd/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="com.journaldev.hibernate.model">

	<class name="Items" table="ITEMS">
		<id name="id" type="long">
			<column name="id" />
			<generator class="identity" />
		</id>

		<property name="itemId" type="string">
			<column name="item_id"></column>
		</property>

		<property name="itemTotal" type="double">
			<column name="item_total"></column>
		</property>

		<property name="quantity" type="integer">
			<column name="quantity"></column>
		</property>

		<!--请注意，从items到Cart，它是多对一的关系。
		所以我们需要为Cart使用many-to-one元素，并且我们提供将使用key映射的列名。
		因此基于Cart hibernate映射配置，它的key cart_id将用于映射。-->
		<many-to-one name="cart" class="Cart">
			<column name="cart_id" not-null="true"></column>
		</many-to-one>
	</class>

</hibernate-mapping>